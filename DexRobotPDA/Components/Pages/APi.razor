@page "/servos"
@using DexRobotPDA.ApiResponses
@using DexRobotPDA.DTOs
@using RestSharp
@using System.Text.Json
@inject RestClient RestClient
@inject IDX023Service Idx023Service

<h3>Servos</h3>

@if (_loading)
{
    <div class="text-center my-4">
        <p>Loading...</p>
        <div class="spinner-border" role="status"></div>
    </div>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <div class="alert alert-danger" role="alert">
        @_error
    </div>
}
else if (items == null || !items.Any())
{
    <div class="alert alert-info" role="alert">
        No servos found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Servo</th>
            <th>Task</th>
            <th>Operator</th>
            <th>Qualified</th>
            <th>Created</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var x in items)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.servo_id</td>
                <td>@x.task_id</td>
                <td>@x.operator_id</td>
                <td>
                    <span class="badge @(x.is_qualified ? "bg-success" : "bg-danger")">
                        @(x.is_qualified ? "OK" : "NG")
                    </span>
                </td>
                <td>@x.created_at.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private bool _loading = true;
    private string _error = "";
    private List<ServoDto> items = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;
            _error = "";
            
            // 检查 ServoService 是否为空
            if (Idx023Service == null)
            {
                _error = "ServoService is not available";
                return;
            }

            // 获取数据
            items = await Idx023Service.GetAllAsync();
            
            // 检查返回的数据
            if (items == null)
            {
                _error = "Failed to load data from service";
                items = new List<ServoDto>();
            }
        }
        catch (Exception ex)
        {
            _error = $"Error loading servos: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
            items = new List<ServoDto>();
        }
        finally
        {
            _loading = false;
            // 触发重新渲染
            StateHasChanged();
        }
    }

    // 可选：添加刷新方法
    private async Task RefreshData()
    {
        _loading = true;
        _error = "";
        StateHasChanged(); // 立即显示loading状态
        
        await Task.Delay(100); // 短暂延迟确保UI更新
        
        await OnInitializedAsync();
    }
}