@page "/DX023Detect2Page"
@using DexRobotPDA.Components.Pages.Components
<MudPaper Elevation="3" MaxWidth="1000px" Class="pa-4 ma-2 mx-auto">
    @if (isLoading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true"/>
    }
    else if (_palm?.id > 0)
    {
        <MudForm @ref="form" @bind-Errors="@errors" Model="@_detectDto">
    <MudPaper Class="pa-4">
        <MudTextField Label="手掌编号"
                      Disabled="true"
                      Class="my-2"
                      @bind-Value="_detectDto.palm_id"
                      RequiredError="请输入手掌编号"/>
        
        <MudTextField Class="my-2" T="string?" Label="备注" @bind-Value="_detectDto.remarks"/>
    </MudPaper>

    <div class="d-flex mt-2">
        <MudRadioGroup T="bool" @bind-Value="_detectDto.if_qualified">
            <MudRadio T="bool" Value="true" Color="Color.Success" Dense="true">合格</MudRadio>
            <MudRadio T="bool" Value="false" Color="Color.Error" Dense="true">不合格</MudRadio>
        </MudRadioGroup>

        <MudSpacer/>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="ml-auto mt-2"
                   OnClick="HandleSubmit"
                   Disabled="isSubmitting">
            @(isSubmitting ? "提交中..." : "提交检测结果")
        </MudButton>
    </div>
</MudForm>

    }
    else if (hasSearched)
    {
        <MudText Align="Align.Center" Color="Color.Warning">
            未查询到相关数据
        </MudText>
    }
    <MudDivider Class="my-4"/>
    <MudStack Row="true" Spacing="4" Class="d-flex align-center py-2">
        <MudTextField
            @bind-Value="palm_id"
            Label="手掌编号"
            Variant="Variant.Outlined"
            Required="true"
            Clearable="true"
            Error="@hasInputError"
            ErrorText="请输入手掌编号"
            AutoFocus="true"
            Id="taskId"
            Class="flex-1"/>

        <MudButton
            Variant="Variant.Filled"
            Color="Color.Error"
            StartIcon="@Icons.Material.Filled.DeleteForever"
            OnClick="ClearData"
            Size="Size.Large"
            Class="w-full md:w-auto">
            清除
        </MudButton>
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Primary"
            StartIcon="@Icons.Material.Filled.Search"
            Size="Size.Large"
            Disabled="isLoading"
            OnClick="GetDetect"
            Class="w-full md:w-auto">
            @(isLoading ? "查询中..." : "查询")
        </MudButton>
    </MudStack>
</MudPaper>

@code {
    private string palm_id = string.Empty;
    private bool isLoading = false;
    private bool hasInputError = false;
    private bool hasSearched = false;
    private bool isSubmitting = false;
    private UserDto? currentUser;

    private AddDX023FunctionalDetectsDto _detectDto = new();
    private PalmDto? _palm = new();
    bool success;
    string[] errors = { };
    MudForm form;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isLoading = true;
            StateHasChanged();
            try
            {
                currentUser = await AuthService.GetCurrentUserAsync();
                StateHasChanged();
                if (currentUser == null)
                {
                    NavManager.NavigateTo("/login", true);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"加载用户信息失败: {ex.Message}");
                NavManager.NavigateTo("/login", true);
            }
            finally
            {
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private void ClearData()
    {
        palm_id = string.Empty;
        hasSearched = false;
        hasInputError = false;
        _detectDto = new();
        _palm = new();

        if (currentUser != null)
        {
            _detectDto.inspector = currentUser.employee_id;
        }

        // 清除后强制刷新UI
        InvokeAsync(StateHasChanged);
    }

    private async Task GetDetect()
    {
        if (string.IsNullOrWhiteSpace(palm_id))
        {
            await InvokeAsync(() =>
            {
                hasInputError = true;
                StateHasChanged();
            });
            return;
        }

        await InvokeAsync(() =>
        {
            _palm = new();
            _detectDto = new();
            hasInputError = false;
            isLoading = true;
            StateHasChanged();
        });

        try
        {
            _palm = await DetectService.GetPalm(palm_id);
            _detectDto.palm_id = _palm.palm_id;
            _detectDto.inspector = currentUser?.employee_id;
            _detectDto.if_qualified = false;
            hasSearched = true;
        }
        catch (Exception ex)
        {
            await InvokeAsync(() =>
            {
                _detectDto = new AddDX023FunctionalDetectsDto();
                SnackbarHelper.Show(Snackbar, "加载失败", Severity.Error);
            });
        }
        finally
        {
            await InvokeAsync(() =>
            {
                isLoading = false;
                StateHasChanged();
            });
        }
    }

    private bool CanSubmit => CheckRequiredFields();

    private bool CheckRequiredFields()
    {
        return true;
    }


    private async Task HandleSubmit()
    {
        // 先执行表单验证
        await form.Validate();

        if (form.IsValid && CanSubmit)
        {
            try
            {
                isSubmitting = true;

                if (string.IsNullOrEmpty(_detectDto.inspector))
                {
                    await LogService.AddLog("手掌标定检测", currentUser?.employee_id ?? "未知用户",
                        $"检测失败 - 手掌编号: {_detectDto.palm_id}, 原因: 检测员信息缺失", false);

                    SnackbarHelper.Show(Snackbar, "检测员信息缺失，请重新登录", Severity.Error);
                    return;
                }

                _detectDto.calibrate_time = DateTime.Now;
                var response = await Idx023Service.AddDX023FunctionalDetect(_detectDto);

                if (response?.ResultCode == 1)
                {
                    await LogService.AddLog("手掌标定检测", currentUser.employee_id,
                        $"检测完成 - 手掌编号: {_detectDto.palm_id}, 检测结果: {(_detectDto.if_qualified == true ? "合格" : "不合格")}", true);

                    SnackbarHelper.Show(Snackbar, "提交成功", Severity.Success);
                    try
                    {
                        var updateQualifyDto = new UpdateQualifyDto
                        {
                            id = _detectDto.palm_id,
                            qualified = _detectDto.if_qualified 
                        };

                        var response2 = await DetectService.UpdatePalmQualify(updateQualifyDto);
                        if (response2?.ResultCode == 1)
                        {
                            SnackbarHelper.Show(Snackbar, $"更新{_detectDto.palm_id}的状态成功", Severity.Success);
                        }
                        else
                        {
                            SnackbarHelper.Show(Snackbar, $"更新失败：{response2?.Msg}", Severity.Error);
                        }
                    }
                    catch (Exception ex)
                    {
                        SnackbarHelper.Show(Snackbar, $"提交异常：{ex.Message}", Severity.Error);
                    }

                    try
                    {
                        var response2 = await DetectService.UpdateDetect5StatusAsync(_palm.task_id);
                        if (response2?.ResultCode == 1)
                        {
                            SnackbarHelper.Show(Snackbar, $"更新{_detectDto.palm_id}的状态成功", Severity.Success);
                        }
                        else
                        {
                            SnackbarHelper.Show(Snackbar, $"更新失败：{response2?.Msg}", Severity.Error);
                        }
                    }
                    catch (Exception ex)
                    {
                        SnackbarHelper.Show(Snackbar, $"提交异常：{ex.Message}", Severity.Error);
                    }

                    await TaskService.UpdateSingleTaskStatus(_palm.task_id);
                    ClearData();
                }
                else
                {
                    await LogService.AddLog("手掌标定检测", currentUser.employee_id,
                        $"检测失败 - 手掌编号: {_detectDto.palm_id}, 原因: {response?.Msg}", false);

                    SnackbarHelper.Show(Snackbar, $"提交失败：{response?.Msg}", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                await LogService.AddLog("手掌标定检测", currentUser.employee_id,
                    $"检测异常 - 手掌编号: {_detectDto.palm_id}, 异常: {ex.Message}", false);

                SnackbarHelper.Show(Snackbar, $"提交异常：{ex.Message}", Severity.Error);
            }
            finally
            {
                isSubmitting = false;
                StateHasChanged();
            }
        }
        else
        {
            await LogService.AddLog("手掌标定检测", currentUser?.employee_id ?? "未知用户",
                $"表单验证失败 - 手掌编号: {_detectDto.palm_id}", false);

            SnackbarHelper.Show(Snackbar, "表单存在错误（如未选择时间/耗时未计算），请检查后提交", Severity.Warning);
        }
    }
}