@page "/stepper"

<MudPaper>
    <MudStepper NonLinear="true" OnPreviewInteraction="OnPreviewInteraction" HideButtons="true">
        <MudStep Title="领料">

        </MudStep>
        <MudStep Title="电机粘蜗杆" HasError="@(_step2TextInput=="")">
            <MudTextField Label="Enter some text" @bind-Value="_step2TextInput" Variant="Variant.Filled" Clearable/>
        </MudStep>
        <MudStep Title="电机组装"></MudStep>
        <MudStep Title="成品组装"></MudStep>
        <MudStep Title="烧录"></MudStep>
        <MudStep Title="质检"></MudStep>
    </MudStepper>
</MudPaper>

@code {
    
    private bool? _step1Complete;
    private string _step2TextInput;
    private int _step = 1;
    private async Task OnPreviewInteraction(StepperInteractionEventArgs arg)
    {
        if (arg.Action == StepAction.Complete) 
        {
             _step++;
        }
    }
}